pipeline {
    agent any
    
    environment {
        DOCKER_HOST_SERVER = 'ec2-user@54.80.0.85'
    }
    
  tools {
        maven 'maven_3.9.6' 
    }
    

    stages {
        
        stage('Build') {
            steps {
                // Run Maven build command
                sh """
                  cd ./app
                  ls 
                  mvn clean install
                """
            }
        }
        
        
        
        stage('copy require files to ansible server') {
            steps {
            sshagent(['host_key']) {
                sh "scp -o StrictHostKeyChecking=no Ansible/* ${DOCKER_HOST_SERVER}:/Ansible"
                sh "scp  app/* ${ANSIBLE_HOST_SERVER}:/app"
                withCredentials([sshUserPrivateKey(credentialsId: 'host_key', keyFileVariable: 'keyfile')]) {
                            sh 'scp $keyfile  ${DOCKER_HOST_SERVER}:/Ansible/ssh-key.pem'
                        }

            }
        }
    }
}
    
}
